<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/userInfoPage.css" />
  <title>Informações Pessoais</title>
</head>
<body>
  <main class="page">
    <a class="back" href="/home">← Voltar</a>

    <section class="card" id="userCard" aria-live="polite">
      <div class="card-header">
        <div class="avatar" id="avatar">R</div>
        <div class="title">
          <h1 id="nome">—</h1>
          <p id="email" class="muted">—</p>
        </div>
      </div>

      <div class="card-body">
        <div class="info-grid">
          <div class="info-item">
            <span class="label">Gordura corporal</span>
            <span class="value" id="bodyfat">—</span>
          </div>

          <div class="info-item">
            <span class="label">Objetivo</span>
            <span class="value" id="goal">—</span>
          </div>

          <div class="info-item">
            <span class="label">Altura</span>
            <span class="value" id="height">—</span>
          </div>

          <div class="info-item">
            <span class="label">Peso</span>
            <span class="value" id="weight">—</span>
          </div>
        </div>

        <div class="divider"></div>

        <h2 class="sub">Condições médicas</h2>
        <div id="medical" class="medical-list"></div>

        <div class="actions">
          <button id="refreshBtn">Atualizar</button>
          <!-- <button id="editBtn" class="outline">Editar</button> -->
        </div>
      </div>
    </section>

    <div id="toast" class="toast" role="status" aria-live="polite"></div>
  </main>

  <script type="module" src="/js/userInfo/userInfo.js"></script>
</body>
</html>
